pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/<your-username>/llm-devops-boilerplate.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t llm-app .'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker stop llm || true
                docker rm llm || true
                docker run -d -p 8000:8000 --name llm llm-app
                '''
            }
        }
    }
}

